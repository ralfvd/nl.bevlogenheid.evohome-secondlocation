{
    "id": "nl.bevlogenheid.evohome-secondlocation",
    "name": {
        "en": "Honeywell Evohome 2nd location"
    },
    "version": "2.0.4",
    "compatibility": ">=1.5.0",
    "sdk": 2,
    "description" : {
	     "en" : "Control Honeywell Evohome thermostats",
       "nl" : "Bedien je Honeywell Evohome verwarmingsinstallatie"
    },
    "author": {
        "name": "Ralf van Dooren",
        "email": "ralfvd@gmail.com"
    },
    "contributing": {
        "donate": {
            "paypal": {
                "username": "my_paypal.ralfvd"
            }
        }
    },
    "homeyCommunityTopicId": 6887,
    "images": {
      "large": "./assets/images/large.png",
      "small": "./assets/images/small.png"
      },
    "category": [ "climate" ],
    "dependencies": { },
    "drivers": [
      {
        "id": "thermostat",
        "name": {
          "en" : "Thermostat",
          "nl" : "Thermostaat"
        },
        "class": "thermostat",
        "capabilities": [ "target_temperature", "measure_temperature" ],
        "images": {
          "large": "drivers/thermostat/assets/images/large.jpg",
          "small": "drivers/thermostat/assets/images/small.jpg"
        },
        "pair": [
          {
            "id": "list_thermostats",
            "template": "list_devices",
            "navigation": {
              "next": "add_thermostats"
            }
          },
          {
            "id": "add_thermostats",
            "template": "add_devices"
          }
        ]
      }
    ],
    "flow": {
      "triggers": [
        {
          "id": "any_measure_temp_changed",
          "title": {
            "en": "Any changing temperature",
            "nl": "Een temperatuur verandert"
          },
          "tokens": [
            {
              "name": "thermostat",
              "title": {
                "en": "device",
                "nl": "thermostaat"
              }
            },
            {
              "name": "temperature",
              "type": "number",
              "title": {
                "en": "temperature",
                "nl": "temperatuur"
              }
            }
          ]
        },
        {
          "id": "quickaction_changed_externally",
          "title": {
            "en": "Mode changed not via Homey",
            "nl": "Modus aangepast buiten Homey"
          },
          "tokens": [
            {
              "name": "qa_name",
              "title": {
                "en": "modus",
                "nl": "mode"
              }
            }
          ]
        }
        ],
       "conditions": [
       ],
       "actions": [
         {
	        "id": "set_quickaction",
	        "title": {
	           "en": "Set QuickAction",
             "nl": "Activeer SnelleActie"
           },
          "args":
          [
            {
              "name": "qa",
              "type": "dropdown",
              "values": [
                { "id": "Auto",
                  "label": {
                      "en": "Auto",
                      "nl": "Automatisch"
                    }
                },
                { "id": "HeatingOff",
                  "label": {
                      "en": "Heating off",
                      "nl": "Verwarming uit"
                    }
                },
                { "id": "AutoWithEco",
                  "label": {
                      "en": "Economy mode",
                      "nl": "Zuinige modus"
                    }
                },
                { "id": "Away",
                  "label": {
                      "en": "Away",
                      "nl": "Afwezig"
                    }
                },
                { "id": "Custom",
                  "label": {
                      "en": "Custom setting",
                      "nl": "Aangepaste instelling"
                    }
                },
                { "id": "DayOff",
                  "label": {
                      "en": "Day off",
                      "nl": "Dag vrij"
                    }
                }
                ]
              }
            ]
         },
         {
           "id": "set_quickaction_manual_entry",
           "title": {
             "en": "set QuickAction manual entry",
             "nl": "activeer SnelleActie, handmatige invoer"
           },
           "args": [
             {
               "name": "qa",
               "type": "text"
             }
           ]
         },
         {
           "id": "set_temperature_manual",
           "title": {
             "en": "Set temperature by input",
             "nl": "Stel temperatuur in"
           },
           "args": [
             {
               "name": "temp_manual",
               "type": "text",
               "attr": {
                  "min": 0,
                  "max": 30,
                  "step": 0.5
                }
             },
             {
               "name": "device",
               "type": "device",
               "filter": "driver_id=thermostat"
             }
           ]
         },
         {
           "id": "reset_temperature",
           "title": {
             "en": "Cancel adjustment",
             "nl": "Annuleer aanpassing"
           },
           "args": [
             {
             "name": "device",
             "type": "device",
             "filter": "driver_id=thermostat"
             }
         ]
         }
    ]
  }
}
